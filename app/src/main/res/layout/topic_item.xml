<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="12dp"
    app:cardBackgroundColor="#FFC107">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/tv_topic_area_of_subject_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Themenbereich: "
            />

        <TextView
            android:id="@+id/tv_topic_area_of_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toRightOf="@+id/tv_topic_area_of_subject_txt"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Themenbereich"
            />

        <TextView
            android:id="@+id/tv_topic_subject_txt"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_topic_area_of_subject"
            android:text="Thema: "/>

        <TextView
            android:id="@+id/tv_topic_subject"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_topic_subject_txt"
            android:text="Beispielthema"/>

        <TextView
            android:id="@+id/tv_topic_description_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_topic_subject"
            android:text="Beschreibung:"/>

        <TextView
            android:id="@+id/tv_topic_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_topic_description_txt"
            android:text="Dies ist eine Beispielbeschreibung"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/tv_topic_full_name_tutor_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_topic_description"
            android:text="Name des Tutors: "/>

        <TextView
            android:id="@+id/tv_topic_full_name_tutor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_topic_description"
            android:layout_toRightOf="@id/tv_topic_full_name_tutor_txt"
            android:text="Name, Vorname"/>






    </RelativeLayout>

</androidx.cardview.widget.CardView>