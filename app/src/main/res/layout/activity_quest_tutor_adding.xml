<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#D6D6D6"
    tools:context=".tutor.QuestTutorAddingActivity">

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Wollen Sie ein Thema für eine Abschlussarbeit ausschreiben oder eine zu betreuende Arbeit erstellen?"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="28dp" />

    <Button
        android:id="@+id/btn_post_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_question"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:backgroundTint="#FFFFC107"
        android:padding="18dp"
        android:text="Thema ausschreiben" />

    <Button
        android:id="@+id/btn_create_exam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_post_topic"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:backgroundTint="#FFFFC107"
        android:padding="18dp"
        android:text="Abschlussarbeit erstellen" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_create_exam"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="30dp"
        android:textStyle="bold"
        android:backgroundTint="#FFFFC107"
        android:padding="18dp"
        android:text="Zurück" />

</RelativeLayout>