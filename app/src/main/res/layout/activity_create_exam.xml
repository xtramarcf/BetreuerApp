<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#D6D6D6"
    tools:context=".tutor.CreateExamActivity">

    <TextView
        android:id="@+id/tv_headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="10dp"
        android:text="Zu betreuende Abschlussarbeit erstellen"
        android:textAlignment="center"
        android:textSize="32dp" />

    <EditText
        android:id="@+id/et_create_exam_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_headline"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:hint="Thema"
        android:inputType="textNoSuggestions" />

    <EditText
        android:id="@+id/et_create_exam_area_of_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_create_exam_subject"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:hint="Themenbereich"
        android:inputType="textNoSuggestions" />


    <EditText
        android:id="@+id/et_create_exam_student_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_create_exam_area_of_subject"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:hint="Name des Studenten"
        android:inputType="textNoSuggestions"
        android:lineBreakStyle="normal" />

    <EditText
        android:id="@+id/et_create_exam_student_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_create_exam_student_name"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:hint="Vorname des Studenten"
        android:inputType="textNoSuggestions"
        android:lineBreakStyle="normal" />

    <EditText
        android:id="@+id/et_create_exam_student_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_create_exam_student_first_name"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:hint="E-Mail des Studenten"
        android:inputType="textNoSuggestions"
        android:lineBreakStyle="normal" />

    <EditText
        android:id="@+id/et_create_exam_second_assessor_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_create_exam_student_email"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:hint="Name des Zweitgutachters"
        android:inputType="textNoSuggestions"
        android:lineBreakStyle="normal" />

    <EditText
        android:id="@+id/et_create_exam_second_assessor_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_create_exam_second_assessor_name"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="30dp"
        android:hint="Vorname des Zweitgutachters"
        android:inputType="textNoSuggestions"
        android:lineBreakStyle="normal" />

    <Button
        android:id="@+id/btn_create_exam_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_create_exam_second_assessor_first_name"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="10dp"
        android:text="Arbeit erstellen"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btn_create_exam_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_create_exam_submit"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="20dp"
        android:text="Abbrechen"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tv_create_exam_failure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_create_exam_cancel"
        android:textAlignment="center"
        android:textColor="#FA0000"
        android:textSize="20dp" />


</RelativeLayout>